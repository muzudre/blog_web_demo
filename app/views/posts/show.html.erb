 <div id="post_show_content" class="skinny_wrapper wrapper_padding">
      <header>
         <p class="date"><%= @post.created_at.strftime('%A, %B %d')%></p>
         <h1><%= @post.title %></h1>
         <hr />
      </header>
      <div id="content">
         <p><%= markdown @post.content %></p>
      </div>
      
      <hr />
      
      <div id="share_box">
         <p><%= @post.title %></p>
         <a href="#"><i class="fa fa-twitter"></i></a>
         <a href="#"><i class="fa fa-instagram"></i></a>
         <a href="#"><i class="fa fa-facebook"></i></a>
         
         <hr />

         <%= render 'disqus'%>

         <h2><%= link_to "Edit", edit_post_path(@post) %></h2>
   <h2><%= link_to "Delete", post_path(@post), method: :delete, data:{ confirm: "Are you sure you want delete this post?"} %></h2>
         
      </div>

   </div>

   
